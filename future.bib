}

@Article{Cienciala2024,
  author     = {Cienciala, Emil and Melichar, Jan},
  journal    = {Carbon Balance and Management},
  title      = {Forest carbon stock development following extreme drought-induced dieback of coniferous stands in {Central} {Europe}: a {CBM}-{CFS3} model application},
