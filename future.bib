  keywords  = {Biophysical model, climate change, climate envelope model, demography, fundamental niche, physiology, realized niche, species’ range model},
  language  = {en},
  url       = {https://onlinelibrary.wiley.com/doi/abs/10.1111/j.1461-0248.2010.01479.x},
  urldate   = {2024-06-25},
}

